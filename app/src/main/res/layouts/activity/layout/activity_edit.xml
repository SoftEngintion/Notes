<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.ws.notes.EditActivity">
    <android.support.design.widget.TextInputLayout
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="false">
        <EditText
            android:id="@+id/editor_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:hint="@string/edit_title_hint"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/editor_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="@string/textview" />
    <TextView
        android:id="@+id/editor_dis"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_alarm"
        android:visibility="invisible"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="15">
        <EditText
            android:id="@+id/editor_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@null"
            android:ems="10"
            android:gravity="top"
            android:hint="@string/edit_content_hint"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"/>
    </android.support.design.widget.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/mLinearLayout_add_desktop"
        android:orientation="horizontal"
        android:visibility="invisible">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="false"
            android:textColor="@color/White"
            android:gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:typeface="monospace"
            android:layout_weight="3"
            android:text="@string/add_to_desktop"
            tools:ignore="NestedWeights" />
        <com.suke.widget.SwitchButton
            android:layout_weight="1"
            android:id="@+id/SwitchButton_add_to_desktop"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mLinearLayout_add_time"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:visibility="invisible">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:clickable="false"
            android:textColor="@color/White"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:typeface="monospace"
            android:text="@string/add_alarm"
            tools:ignore="NestedWeights" />
        <com.suke.widget.SwitchButton
            android:layout_weight="1"
            android:id="@+id/SwitchButton_add_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/mButton_yes"
        android:text="@string/mButton_save"
        android:layout_weight="1"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_save"
        android:theme="@style/RippleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
